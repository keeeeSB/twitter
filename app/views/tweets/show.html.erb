<div class="card mx-auto position-relative" style="width: 30rem;">
  <div class="position-absolute top-0 end-0 m-3">
    <%= like_button(current_user, @tweet) %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><strong><%= @tweet.user.name %></strong></h5>
    <p class="card-text"><%= @tweet.content %></p>
    <% if @tweet.image.present? %>
      <%= image_tag @tweet.image.url, class: "card-img-top", alt: "画像" %>
    <% end %>
    <p class="text-muted small">投稿日: <%= l(@tweet.created_at, format: :long) %></p>
    <% if current_user == @tweet.user %>
      <%= link_to "編集", edit_user_tweet_path(current_user, @tweet),
        class: "btn btn-outline-warning btn-sm me-1" %>
      <%= link_to "削除", user_tweet_path(current_user, @tweet),
        data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
        class: "btn btn-outline-danger btn-sm" %>
    <% end %>
  </div>
</div>
