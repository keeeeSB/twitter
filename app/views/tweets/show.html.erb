<div class="card mx-auto" style="width: 30rem;">
  <% if @tweet.image.present? %>
    <%= image_tag @tweet.image, class: "card-img-top", alt: "画像" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= @tweet.user.name %></h5>
    <p class="card-text"><%= @tweet.content %></p>
    <p class="text-muted small">投稿日: <%= l(@tweet.created_at, format: :long) %></p>
    <% if current_user == @tweet.user %>
      <%= link_to "編集", edit_user_tweet_path(curren_user, @tweet),
        class: "btn btn-outline-warning btn-sm me-3" %>
      <%= link_to "削除", user_tweet_path(current_user, @tweet),
        data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
        class: "btn btn-outline-danger btn-sm" %>
    <% end %>
  </div>
</div>
